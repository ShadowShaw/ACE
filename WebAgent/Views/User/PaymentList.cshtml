@model IEnumerable<Core.Models.Payment>

@{
    ViewBag.Title = "Výpis plateb";
}

Výpis plateb pro platební symbol: @ViewBag.PaymentSymbol;

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentDate)
        </td>
        <td>
            @Html.ActionLink("Vytvořit fakturu", "MakeFacture", new { paymentId=item.Id })    
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Zpět na index", "Index")
</p>


