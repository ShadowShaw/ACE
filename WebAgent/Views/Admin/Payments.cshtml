@model IEnumerable<Core.Models.Payment>

@{
    ViewBag.Title = "Správa plateb";
}

@Html.Partial("PageTitlePartial")

<p>
    @Html.ActionLink("Zadat novou platbu", "CreatePayment", routeValues: null, htmlAttributes: new { @class="btn btn-default" })
</p>

<table class="table table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentSymbol)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceNumber)
        </th>
        <th>
            Akce
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentSymbol)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvoiceNumber)
        </td>
        <td>
            @Html.ActionLink("Editace", "EditPayment", new { id=item.Id }, htmlAttributes: new { @class="btn btn-default btn-xs" })
            @Html.ActionLink("Smazat", "DeletePayment", new { id=item.Id }, htmlAttributes: new { @class="btn btn-default btn-xs" })
        </td>
    </tr>
}

</table>


<p>
    @Html.ActionLink("Zpět na admin index", "Index", routeValues: null, htmlAttributes: new { @class="btn btn-default" })
</p>
