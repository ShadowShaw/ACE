@model Core.Models.ACEModule

@{
    ViewBag.Title = "Úprava modulu";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ACEModule</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MonthPrice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MonthPrice)
            @Html.ValidationMessageFor(model => model.MonthPrice)
        </div>

        @Html.HiddenFor(model => model.Id)

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Zpět na seznam modulů", "Modules")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
