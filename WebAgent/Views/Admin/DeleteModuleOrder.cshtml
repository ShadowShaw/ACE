@model Core.Models.ModuleOrder

@{
    ViewBag.Title = "Smazat objednávku modulu";
}

@Html.Partial("PageTitlePartial")

<h3>Jste si jisti, zda chce opravdu smazat objednávku?</h3>
<fieldset>
    <div class="display-label">
         @Html.DisplayNameFor(model => model.UserId)
    </div>
    <div class="display-field">
        Id: @Html.DisplayFor(model => model.UserId) 
        Username: @Html.Action("GetUserNameForId", new { Id = ViewBag.UserId })
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.ModuleId)
    </div>
    <div class="display-field">
        Id: @Html.DisplayFor(model => model.ModuleId) 
        Jméno: @Html.Action("GetModuleNameForId", new { Id = ViewBag.ModuleId })
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.OrderDate)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.OrderDate)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Price)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Price)
    </div>

</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" class="btn btn-primary" value="Smazat objednávku modulu" /> 
        @Html.ActionLink("Zpět na seznam objednávek modulů", "ModuleOrders", routeValues: null, htmlAttributes: new { @class="btn btn-default" })
    </p>
}
