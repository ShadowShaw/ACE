@model PriceUpdater.Models.LocalPasswordModel
@{
    ViewBag.Title = "Správa uživatelského účtu";
}

<p class="message-success">@ViewBag.StatusMessage</p>

<p>Jste přihlášeni jako: <strong>@User.Identity.Name</strong>.</p>

@if (ViewBag.HasLocalPassword)
{
    @Html.Partial("_ChangePasswordPartial")
}
else
{ 
    @Html.Partial("_SetPasswordPartial")
}

@Html.Partial("_ChangeUserProperties")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
